{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "baseUrl": "src",
    "allowJs": true,
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
    "strict": true
  },
  "include": ["./src", "./tests"],
  "exclude": ["node_modules", "dist"]
}
